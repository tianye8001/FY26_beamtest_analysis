#!/bin/csh -f

source /jlab/2.5/ce/jlab.csh
setenv GEMC /group/solid/apps/gemc/2.9
setenv SoLID_GEMC /solid_gemc
setenv LD_LIBRARY_PATH ${GEMC}:${LD_LIBRARY_PATH}
setenv PATH ${SoLID_GEMC}/source/${GEMC_VERSION}:${PATH}

#run simulation
# solid_gemc solid.gcard -BEAM_P="e-,5.5*GeV,73*deg,0*deg" -SPREAD_P="5.5*GeV,10*deg,180*deg" -BEAM_V="(0,0,0)cm" -SPREAD_V="(0,25)cm" -N=1e4 | cat >> out.log

#solid_gemc solid.gcard -INPUT_GEN_FILE="LUND,gen.lund" -N=1e6 | cat >> out.log
#solid_gemc solid.gcard -FILTER_HITS=1 -BEAM_P="e-,8.494*GeV,0*deg,0*deg" -SPREAD_P="0*GeV,0*deg,0*deg" -BEAM_V="(0,0,-40)cm" -SPREAD_V="(0.25,0)cm"  -N=1e8 | cat >> out.log
#solid_gemc solid.gcard -FILTER_HITS=1 -BEAM_P="e-,10.6*GeV,0*deg,0*deg" -SPREAD_P="0*GeV,0*deg,0*deg" -BEAM_V="(0,0,-40)cm" -SPREAD_V="(0.25,0)cm" -ENERGY_CUT=10 -N=2e7 | cat >> out.log

# solid_gemc solid.gcard -FILTER_HITS=1 -BEAM_P="e-,11*GeV,0*deg,0*deg" -SPREAD_P="0*GeV,0*deg,0*deg" -BEAM_V="(0,0,-400)cm" -SPREAD_V="(0.25,0)cm"  -N=5e7 | cat >> out.log

# 2021.67+56*2.54/2-132-3/2=1888   x=1960*sin(-18/180*3.1416)=-606 1960*cos(-18/180*3.1416)=1864
solid_gemc solid.gcard -FILTER_HITS=1 -BEAM_P="e-,10.6*GeV,0*deg,0*deg" -SPREAD_P="0*GeV,0*deg,0*deg" -BEAM_V="(0,0,-5)cm" -SPREAD_V="(0.25,0)cm"  -N=1e7 | cat >> out.log

#convert evio to root
#need more option for banks other than flux
# which  evio2root
evio2root -INPUTF=out.evio -B="/solid_gemc/prototype/ec_pro/HallC2026/geometry/cc_pro   /solid_gemc/prototype/ec_pro/HallC2026/geometry/solid_ec  /solid_gemc/prototype/ec_pro/HallC2026/geometry/solid_gem /solid_gemc/prototype/ec_pro/HallC2026/geometry/solid_spd " -R="flux" | cat >> out.log

